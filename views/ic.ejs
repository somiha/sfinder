<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>All IC's</h4>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addIC"><i class="bi bi-plus me-2"></i>Add
        New</button>
    </div>
    <div class="modal fade" id="addIC" tabindex="-1" aria-labelledby="addICLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Add IC</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="add-notification-form">
              <form action="/admin/add-ic" method="POST" enctype="multipart/form-data">
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Brand</label>
                  <input type="text" class="form-control" name="ic_brand" placeholder="Brand">
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Model</label>
                  <input type="text" class="form-control" name="ic_model" placeholder="Model">
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Part No</label>
                  <input type="text" class="form-control" name="ic_part" placeholder="Part No">
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Code</label>
                  <input type="text" class="form-control" name="ic_code" placeholder="Code">
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Location</label>
                  <input type="text" class="form-control" name="ic_location" placeholder="Location">
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Description</label>
                  <textarea class="form-control" name="ic_description" placeholder="IC Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="banner-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">S. No</th>
              <th scope="col">Brand</th>
              <th scope="col">Model</th>
              <th scope="col">Part No</th>
              <th scope="col">Code</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<paginated.length;i++) { %>
            <tr>
              <th scope="row">
                <%= (page - 1) * perPage + i + 1 %>
              </th>
              <td>
                <%= paginated[i].ic_brand %>
              </td>
              <td>
                <%= paginated[i].ic_model %>
              </td>
              <td>
                <%= paginated[i].ic_part_no %>
              </td>
              <td>
                <%= paginated[i].ic_code %>
              </td>
              <td>
                <div class="table-action-btn">
                  <a href="#" data-bs-toggle="modal" data-bs-target="#viewIC<%= paginated[i].ic_id %>">
                    <i class="bi bi-eye-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal" data-bs-target="#editIC<%= paginated[i].ic_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal" data-bs-target="#deleteIC<%= paginated[i].ic_id %>">
                    <i class="bi bi-trash-fill"></i>
                  </a>
                </div>
              </td>
            </tr>
            <div class="modal fade" id="viewIC<%= paginated[i].ic_id %>" tabindex="-1"
              aria-labelledby="viewIC<%= paginated[i].ic_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">View IC</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="daily-update-info">
                      <div class="daily-update-item-box">
                        <h5>Brand</h5>
                        <p>
                          <%= paginated[i].ic_brand %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Model</h5>
                        <p>
                          <%= paginated[i].ic_model %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Part No</h5>
                        <p>
                          <%= paginated[i].ic_part_no %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Code</h5>
                        <p>
                          <%= paginated[i].ic_code %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Location</h5>
                        <p>
                          <%= paginated[i].ic_location %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Description</h5>
                        <p>
                          <%= paginated[i].ic_description %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="editIC<%= paginated[i].ic_id %>" tabindex="-1"
              aria-labelledby="editIC<%= paginated[i].ic_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit IC</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-notification-form">
                      <form action="/admin/edit-ic/<%= paginated[i].ic_id %>" method="POST"
                        enctype="multipart/form-data">
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Brand</label>
                          <input type="text" class="form-control" name="ic_brand" value="<%= paginated[i].ic_brand %>"
                            placeholder="Brand">
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Model</label>
                          <input type="text" class="form-control" name="ic_model" value="<%= paginated[i].ic_model %>"
                            placeholder="Model">
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Part No</label>
                          <input type="text" class="form-control" name="ic_part" value="<%= paginated[i].ic_part_no %>"
                            placeholder="Part No">
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Code</label>
                          <input type="text" class="form-control" name="ic_code" value="<%= paginated[i].ic_code %>"
                            placeholder="Code">
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Location</label>
                          <input type="text" class="form-control" name="ic_location"
                            value="<%= paginated[i].ic_location %>" placeholder="Location">
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Description</label>
                          <textarea class="form-control" name="ic_description"
                            placeholder="IC Description"><%= paginated[i].ic_description %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Edit</button>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="deleteIC<%= paginated[i].ic_id %>" tabindex="-1"
              aria-labelledby="deleteIC<%= paginated[i].ic_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Notice</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-banner-form">
                      <h3>Are you want to delete?</h3>
                    </div>
                    <a href="/admin/delete-ic/<%= paginated[i].ic_id %>" class="btn btn-danger">Delete</a>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Page Select -->

    <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
      <p class="text-center text-muted small mb-0">
        Show <%= paginated.length %> from <%= ic.length %> IC
      </p>

      <div class="d-flex gap-2 align-items-center">
        <!-- Previous Button -->
        <% if (page > 1) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/ic?=<%= page - 1 %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.125 0.75L0.875 7L7.125 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>

        <!-- Page Numbers -->
        <% 
                      const maxPagesToShow = 8; 
                      const startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2)); 
                      const endPage = Math.min(Math.ceil(ic.length / perPage), startPage + maxPagesToShow - 1); 
                      for (let i = startPage; i <= endPage; i++) { 
                    %>
        <a class="btn btn-sm <%= i === page ? 'btn-primary' : 'btn-outline-secondary' %>"
          href="/admin/ic?page=<%= i %>">
          <%= i %>
        </a>
        <% } %>

        <!-- Next Button -->
        <% if (page < Math.ceil(ic.length / perPage)) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/ic?page=<%= page + 1 %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.875 0.75L7.125 7L0.875 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>
      </div>
    </div>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const activeItem = document.querySelector(".active");
    if (activeItem) {
      activeItem.scrollIntoView({
        block: "center"
      });
    }
  });
</script>
