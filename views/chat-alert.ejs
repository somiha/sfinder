<section class="main-content">
    <div class="main-content-header">
        <span class="mobile-menu-icon">
            <i class="bi bi-list"></i>
        </span>
        <div class="main-content-header-top">
            <div class="admin-info">
                <img src="/images/admin-user-image.png" alt="">
                <h6>Admin</h6>
            </div>
            <a href="/admin/log-out" class="logout-btn">Logout</a>
        </div>
        <div class="main-content-header-bottom">
            <h4>Chat Alert</h4>
        </div>
    </div>
    <div class="user-content py-5">
        <div class="settings-info">
            <div class="settings-info-box">
                <div class="settings-info-box-header">
                    <h4>Chat Alert Message</h4>
                    <button class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#editSocialMediaInfo">Edit</button>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="settings-item">
                            <h5>User Seller Message</h5>
                            <textarea class="form-control" style="height: 200px;">
                                <% if (chat && chat[0] && chat[0].user_seller) { %>
                                <%= chat[0].user_seller %>
                                <% } %>
                            </textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="settings-item">
                            <h5>User Freelancer Message</h5>
                            <textarea class="form-control" style="height: 200px;">
                                <% if (chat && chat[0] && chat[0].user_freelancer) { %>
                                <%= chat[0].user_freelancer %>
                                <% } %>
                            </textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="editSocialMediaInfo" tabindex="-1" aria-labelledby="editSocialMediaInfoLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Chat Alert</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="add-notification-form">
                                <form action="/admin/edit-chat-alert" method="POST">
                                    <div class="add-notification-form-item">
                                        <label for="user_seller" class="form-label">User Seller Message</label>
                                        <textarea id="user_seller" class="form-control" style="height: 200px;"
                                            name="user_seller"><%= chat[0].user_seller %></textarea>
                                    </div>
                                    <div class="add-notification-form-item">
                                        <label for="user_freelancer" class="form-label">User Freelancer Message</label>
                                        <textarea id="user_freelancer" class="form-control" style="height: 200px;"
                                            name="user_freelancer"><%= chat[0].user_freelancer %></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </form>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
