<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Edit Product</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <form action="/admin/edit-shop-product/<%= product_details[0].main_product_id %>" method="POST"
      enctype="multipart/form-data">
      <div class="add-product">
        <div class="row">
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Product Name</label>
              <input type="text" class="form-control" name="product_name" value="<%= product_details[0].product_name %>"
                placeholder="Product Name">
            </div>
          </div>
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Product Category</label>
              <select class="form-select" name="product_cat">
                <option disabled selected>Select Category</option>
                <% for(let i=0;i<product_cat.length;i++) { %>
                <option value="<%= product_cat[i].product_sub_cateogry_id %>" <%=product_cat[i].product_sub_cateogry_id==product_details[0].product_category ? 'selected' : ''
                      %>>
                  <%= product_cat[i].product_sub_cateogry_name %>
                </option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="col-md-4">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Product Price</label>
              <input type="text" class="form-control" name="product_price"
                value="<%= product_details[0].product_price %>" placeholder="Product Price">
            </div>
          </div>
          <div class="col-md-4">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Disount</label>
              <input type="text" class="form-control" name="product_discount"
                value="<%= product_details[0].product_discount %>" placeholder="Discount">
            </div>
          </div>
          <div class="col-md-4">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Quantity</label>
              <input type="number" class="form-control" name="product_qunatity"
                value="<%= product_details[0].product_quantity %>" placeholder="Quantity">
            </div>
          </div>
          <div class="col-md-12">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Description</label>
              <textarea name="product_description" class="form-control"
                placeholder="Description"><%= product_details[0].product_description %></textarea>
            </div>
          </div>
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Featured Image</label>
              <div class="custom-file-upload mb-5">
                <img src="<%= product_details[0].product_image_url %>" class="mb-4" alt="" id="featured-image"
                  width="100px" height="100px" />
                <div class="custom-file-upload-box">
                  <i class="bi bi-plus-circle"></i>
                  <h6>Click here to upload File</h6>
                  <input type="file" id="featured-image-input" name="product_featured_image"
                    onchange="previewFile(this.id)">
                </div>
              </div>
            </div>
          </div>
          <!-- <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Secondary Image</label>
