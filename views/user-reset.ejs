<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>

    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Users Reset</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="user-list-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Serial No</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Device Id</th>
              <th scope="col">Status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i=0 ; i<user_reset.length ; i++){ %>
            <tr>
              <th scope="row">
                <%= i+1 %>
              </th>
              <td>
                <div class="user-table-user-name">
                  <% let imgSrc;
                        if(user_reset[i].user_image_url){imgSrc=user_reset[i].user_image_url}else{imgSrc="/images/admin-user-image.png"
                        } %>
                  <img src="<%= imgSrc %>" alt="" class="user-image">
                  <h6>
                    <%= user_reset[i].user_name %>
                  </h6>
                </div>
              </td>
              <td>
                <%= user_reset[i].user_email %>
              </td>
              <td>
                <%= user_reset[i].device_id %>
              </td>
              <td>
                <% if(user_reset[i].status==0){ %>
                Pending
                <% } else { %>
                Done
                <% } %>
              </td>
              <td>
                <div class="table-action-btn">
                  <% if(user_reset[i].status==0){ %>
                  <a href="#" data-bs-toggle="modal" data-bs-target="#editUserReset<%= user_reset[i].user_reset_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <% } %>
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#deleteUserReset<%= user_reset[i].user_reset_id %>">
                    <i class="bi bi-trash-fill"></i>
                  </a>
                </div>
              </td>
            </tr>
            <div class="modal fade" id="editUserReset<%= user_reset[i].user_reset_id %>" tabindex="-1"
              aria-labelledby="editUserReset<%= user_reset[i].user_reset_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Change User Reset Status</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-notification-form">
                      <form action="/admin/change-user-reset-option/<%= user_reset[i].user_reset_id %>" method="POST"
                        enctype="multipart/form-data">
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Change Status</label>
                          <select class="form-select" name="user_reset_status">
                            <option selected>Change Status</option>
                            <option value="1">Done</option>
                          </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="deleteUserReset<%= user_reset[i].user_reset_id %>" tabindex="-1"
              aria-labelledby="deleteUserReset<%= user_reset[i].user_reset_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete User Reset</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-banner-form">
                      <h3>Are you want to delete?</h3>
                    </div>
                    <a href="/admin/delete-user-reset/<%= user_reset[i].user_reset_id %>"
                      class="btn btn-danger">Delete</a>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
