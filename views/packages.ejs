<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Packages</h4>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPackage"><i
          class="bi bi-plus me-2"></i>Add
        Package</button>
    </div>
    <div class="modal fade" id="addPackage" tabindex="-1" aria-labelledby="addPackageLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Add Package</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="add-notification-form">
              <form action="/admin/add-package" method="POST" enctype="multipart/form-data">
                <div class="add-banner-form">
                  <h5 class="mb-4">Package Cover Photo</h5>
                  <div class="custom-file-upload mb-5">
                    <img src="/images/800_300.png" class="mb-4" alt="" id="package-cover-image" />
                    <div class="custom-file-upload-box">
                      <i class="bi bi-plus-circle"></i>
                      <h6>Click here to upload File</h6>
                      <input type="file" id="package-cover-image-input" name="package_cover_image"
                        onchange="previewFile(this.id)" required>
                    </div>
                  </div>
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Package Name</label>
                  <input type="text" class="form-control" name="package_name" placeholder="Package Name">
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Package Price</label>
                  <input type="text" class="form-control" name="package_price" placeholder="Package Price">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="user-content pt-3 pb-5">
    <div class="banner-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Package Name</th>
              <th scope="col">Package Cover Photo</th>
              <th scope="col">Package Price</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0 ; i<package.length ; i++) { %>
            <tr>
              <td>
                <%= package[i].package_name %>
              </td>
              <td>
                <img src="<%= package[i].package_image_url %>" alt="">
              </td>
              <td>
                <%= package[i].package_price %>
              </td>
              <td>
                <div class="table-action-btn">
                  <a href="/admin/package-info/<%= package[i].package_id %>">
                    <i class="bi bi-eye-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal" data-bs-target="#editPackage<%= package[i].package_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal" data-bs-target="#deletePackage<%= package[i].package_id %>">
                    <i class="bi bi-trash-fill"></i>
                  </a>
                </div>
              </td>
            </tr>
            <div class="modal fade" id="editPackage<%= package[i].package_id %>" tabindex="-1"
              aria-labelledby="editPackage<%= package[i].package_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Package</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-notification-form">
                      <form action="/admin/edit-package/<%= package[i].package_id %>" method="POST"
                        enctype="multipart/form-data">
                        <div class="add-banner-form">
                          <h5 class="mb-4">Package Cover Photo</h5>
                          <div class="custom-file-upload mb-5">
                            <img src="<%= package[i].package_image_url %>" class="mb-4" alt=""
                              id="package-cover-image<%= package[i].package_id %>" />
                            <div class="custom-file-upload-box">
                              <i class="bi bi-plus-circle"></i>
                              <h6>Click here to upload File</h6>
                              <input type="file" id="package-cover-image-input<%= package[i].package_id %>"
                                name="package_cover_image" onchange="previewFile(this.id)">
                            </div>
                          </div>
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Package Name</label>
                          <input type="text" class="form-control" value="<%= package[i].package_name %>"
                            name="package_name" placeholder="Package Name">
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Package Price</label>
                          <input type="text" class="form-control" value="<%= package[i].package_price %>"
                            name="package_price" placeholder="Package Price">
                        </div>
                        <button type="submit" class="btn btn-primary">Edit</button>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="deletePackage<%= package[i].package_id %>" tabindex="-1"
              aria-labelledby="deletePackage<%= package[i].package_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Package</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-banner-form">
                      <h3>Are you want to delete?</h3>
                    </div>
                    <a href="/admin/delete-package/<%= package[i].package_id %>" class="btn btn-danger">Delete</a>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const activeItem = document.querySelector(".active");
    if (activeItem) {
      activeItem.scrollIntoView({
        block: "center"
      });
    }
  });
</script>
