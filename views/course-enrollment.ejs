<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Course Enrollment</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="user-list-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Course</th>
              <th scope="col">Payment Method</th>
              <th scope="col">Account</th>
              <th scope="col">Amount</th>
              <th scope="col">Purchase Time</th>
              <th scope="col">End Time</th>
              <th scope="col">Is Active</th>
              <!-- <th scope="col">Status</th> -->
              <!-- <th scope="col">Action</th> -->
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<paginated.length;i++) { %>
            <tr>
              <th scope="row">
                <%= course_enrollment[i].user_name %>
              </th>
              <td>
                <%= course_enrollment[i].course_name %>
              </td>
              <td>
                <%= course_enrollment[i].payment_method %>
              </td>
              <td>
                <%= course_enrollment[i].enrollment_account %>
              </td>
              <td>
                <%= course_enrollment[i].amount %>
              </td>
              <td>
                <%= new Date(course_enrollment[i].purchase_time).toLocaleString('en-US', { weekday: 'short', month: 'short', day: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false }) %>
              </td>
              <td>
                <%= new Date(course_enrollment[i].end_time).toLocaleString('en-US', { weekday: 'short', month: 'short', day: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false }) %>
              </td>
              <td><%= course_enrollment[i].is_active?"Yes":"No" %></td>
              </td>
              <!-- <td>
                <% if(course_enrollment[i].status==0){ %>
                Pending
                <% } else { %>
                Done
                <% } %>
              </td> -->
              <!-- <td>
                <div class="table-action-btn">
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#changeEnrollmentStatus<%= course_enrollment[i].course_enrollment_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                </div>
              </td> -->

            </tr>
            <div class="modal fade" id="changeEnrollmentStatus<%= course_enrollment[i].course_enrollment_id %>"
              tabindex="-1"
              aria-labelledby="changeEnrollmentStatus<%= course_enrollment[i].course_enrollment_id %>Label"
              aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Change Course Enrollment Status</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-notification-form">
                      <form
                        action="/admin/change-course-enrollment-status/<%= course_enrollment[i].course_enrollment_id %>"
                        method="POST" enctype="multipart/form-data">
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Status</label>
                          <select class="form-select" name="status">
                            <option disabled>Select Status</option>
                            <option value="0" <%=course_enrollment[i].status=='0' ? 'selected' : '' %>>Pending</option>
                            <option value="1" <%=course_enrollment[i].status=='1' ? 'selected' : '' %>>Done</option>
                          </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Change</button>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Page Select -->

    <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
      <p class="text-center text-muted small mb-0">
        Show <%= paginated.length %> from <%= course_enrollment.length %> course enrollment
      </p>

      <div class="d-flex gap-2 align-items-center">
        <!-- Previous Button -->
        <% if (page > 1) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/course-enrollment?page=<%= page - 1 %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.125 0.75L0.875 7L7.125 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>

        <!-- Page Numbers -->
        <% 
            const maxPagesToShow = 8; 
            const startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2)); 
            const endPage = Math.min(Math.ceil(course_enrollment.length / perPage), startPage + maxPagesToShow - 1); 
            for (let i = startPage; i <= endPage; i++) { 
          %>
        <a class="btn btn-sm <%= i === page ? 'btn-primary' : 'btn-outline-secondary' %>"
          href="/admin/course-enrollment?page=<%= i %>">
          <%= i %>
        </a>
        <% } %>

        <!-- Next Button -->
        <% if (page < Math.ceil(course_enrollment.length / perPage)) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/course-enrollment?page=<%= page + 1 %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.875 0.75L7.125 7L0.875 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>
      </div>
    </div>

  </div>
</section>
