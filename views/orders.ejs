<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>All Orders</h4>
    </div>
    <div class="main-content-header-search-option">
      <div class="user-product-filtering">
        <form action="/admin/order-filter" method="POST" enctype="multipart/form-data">
          <input type="text" class="form-control" name="id" placeholder="Search by Order No">
          <button type="submit" class="btn btn-success">Search</button>
          <select class="form-select" onchange="this.form.submit()" name="filter_status">
            <option disabled selected>Select Status</option>
            <option value="Pending">Pending</option>
            <option value="Processing">Processing</option>
            <option value="Shipped">Shipped</option>
            <option value="Delivered">Delivered</option>
          </select>

        </form>
      </div>
    </div>
  </div>

  <div class="user-content py-5">
    <div class="banner-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Order No</th>
              <th scope="col">Order Id</th>
              <th scope="col">Order Date</th>
              <th scope="col">Order Price</th>
              <th scope="col">Order Status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<orders.length;i++) { %>
            <tr>
              <th scope="row">
                <%= i+1 %>
              </th>
              <th scope="row">
                <%= orders[i].order_id %>
              </th>
              <td>
                <%= orders[i].order_date %>
              </td>
              <td>
                <%= orders[i].order_price %>
              </td>
              <td>
                <span class="badge text-bg-primary">
                  <%= orders[i].order_status %>
                </span>
              </td>
              <td>
                <div class="table-action-btn">
                  <a href="/admin/order-details/<%= orders[i].order_id %>">
                    <i class="bi bi-eye-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal" data-bs-target="#editOrder<%= orders[i].order_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                </div>
              </td>
              <div class="modal fade" id="editOrder<%= orders[i].order_id %>" tabindex="-1"
                aria-labelledby="editOrder<%= orders[i].order_id %>Label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Order</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <div class="add-notification-form">
                        <form action="/admin/edit-order/<%= orders[i].order_id %>" method="POST"
                          enctype="multipart/form-data">
                          <div class="add-notification-form-item">
                            <label for="" class="form-label">Admin Note</label>
                            <input type="text" class="form-control" value="<%= orders[i].admin_note %>"
                              name="order_note" placeholder="Note">
                          </div>
                          <div class="add-notification-form-item">
                            <label for="" class="form-label">Change Status</label>
                            <select class="form-select" name="order_status">
                              <option disabled>Select Status</option>
                              <option value="Pending" <%=orders[i].order_status=='Pending' ? 'selected' : '' %>>Pending
                              </option>
                              <option value="Processing" <%=orders[i].order_status=='Processing' ? 'selected' : '' %>>
                                Processing</option>
                              <option value="Shipped" <%=orders[i].order_status=='Shipped' ? 'selected' : '' %>>Shipped
                              </option>
                              <option value="Delivered" <%=orders[i].order_status=='Delivered' ? 'selected' : '' %>>
                                Delivered</option>
                            </select>
                          </div>
                          <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>


    <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
      <p class="text-center text-muted small mb-0">
        Show <%= orders.length %> from <%= totalOrders %> Orders
      </p>

      <div class="d-flex gap-2 align-items-center">
        <!-- Previous Button -->
        <% if (page > 1) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/order?page=<%= page - 1 %>&status=<%= status %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.125 0.75L0.875 7L7.125 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>

        <!-- Page Numbers -->
        <% 
                                    const maxPagesToShow = 8; 
                                    const startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2)); 
                                    const endPage = Math.min(Math.ceil(totalOrders / perPage), startPage + maxPagesToShow - 1); 
                                    for (let i = startPage; i <= endPage; i++) { 
                                  %>
        <a class="btn btn-sm <%= i === page ? 'btn-primary' : 'btn-outline-secondary' %>"
          href="/admin/order?page=<%= i %>&status=<%= status %>">
          <%= i %>
        </a>
        <% } %>

        <!-- Next Button -->
        <% if (page < Math.ceil(totalOrders / perPage)) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/order?page=<%= page + 1 %>&status=<%= status %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.875 0.75L7.125 7L0.875 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>
      </div>
    </div>

  </div>
