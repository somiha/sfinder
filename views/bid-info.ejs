<section class="main-content">
    <div class="main-content-header">
        <span class="mobile-menu-icon">
            <i class="bi bi-list"></i>
        </span>
        <div class="main-content-header-top">
            <div class="admin-info">
                <img src="/images/admin-user-image.png" alt="">
                <h6>Admin</h6>
            </div>
            <a href="/admin/log-out" class="logout-btn">Logout</a>
        </div>
        <div class="main-content-header-bottom">
            <h4>Cancel Bids</h4>

        </div>

    </div>
    <div class="user-content py-5">
        <div class="user-list-table">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Freelancer Bid Id</th>
                            <th scope="col">User Name</th>
                            <th scope="col">Freelancer Name</th>
                            <th scope="col">Bid Amount</th>
                            <th scope="col">Reason</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0;i<paginated.length;i++) { %>
                        <tr>
                            <th scope="row"><%= paginated[i].freelancer_bid_id %>
                            </th>
                            <td>
                                <%= paginated[i].user_name %>
                            </td>
                            <td>
                                <%= paginated[i].freelancer_name %>
                            </td>
                            <td><%= paginated[i].bid_amount %></td>
                            <td><%= paginated[i].reason %></td>


                            <td>
                                <div class="table-action-btn">


                                    <a href="/admin/delete-bid/<%= paginated[i].freelancer_bid_id %>">
                                        <i class="bi bi-check-circle"></i>
                                    </a>
                                    <!-- <a href="#" data-bs-toggle="modal"
                                        data-bs-target="#deleteUser<%= paginated[i].freelancer_bid_id %>">
                                        <i class="bi bi-trash-fill"></i>
                                    </a> -->
                                </div>
                            </td>
                            <div class="modal fade" id="deleteUser<%= paginated[i].freelancer_bid_id %>" tabindex="-1"
                                aria-labelledby="deleteUserLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteUserLabel">Delete Freelancer</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete freelancer bid?

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Cancel</button>
                                            <form
                                                action="/admin/delete-freelancer/<%= paginated[i].freelancer_bid_id %>"
                                                method="GET" style="display: inline;">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Page Select -->

        <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
            <p class="text-center text-muted small mb-0">
                Show <%= paginated.length %> from <%= cancelBid.length %> Cancel Bids
            </p>

            <div class="d-flex gap-2 align-items-center">
                <!-- Previous Button -->
                <% if (page > 1) { %>
                <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
                    href="/admin/cancel-bid?page=<%= page - 1 %>">
                    <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M7.125 0.75L0.875 7L7.125 13.25" stroke="#84818A" stroke-width="1.5"
                            stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <% } %>

                <!-- Page Numbers -->
                <% 
                                      const maxPagesToShow = 8; 
                                      const startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2)); 
                                      const endPage = Math.min(Math.ceil(cancelBid.length / perPage), startPage + maxPagesToShow - 1); 
                                      for (let i = startPage; i <= endPage; i++) { 
                                    %>
                <a class="btn btn-sm <%= i === page ? 'btn-primary' : 'btn-outline-secondary' %>"
                    href="/admin/cancel-bid?page=<%= i %>">
                    <%= i %>
                </a>
                <% } %>

                <!-- Next Button -->
                <% if (page < Math.ceil(cancelBid.length / perPage)) { %>
                <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
                    href="/admin/cancel-bid?page=<%= page + 1 %>">
                    <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0.875 0.75L7.125 7L0.875 13.25" stroke="#84818A" stroke-width="1.5"
                            stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <% } %>
            </div>
        </div>
    </div>
</section>
