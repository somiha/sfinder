<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Product Title</h4>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProductTitle"><i
          class="bi bi-plus me-2"></i>Add Product Title
      </button>
    </div>
    <div class="modal fade" id="addProductTitle" tabindex="-1" aria-labelledby="addProductTitleLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Add Product Title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="add-notification-form">
              <form action="/admin/add-product-title/<%= product_id %>" method="POST" enctype="multipart/form-data">
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Title name</label>
                  <input type="text" class="form-control" name="product_title" placeholder="Title Name">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="user-content pt-3 pb-5">
    <div class="banner-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">S.No</th>
              <th scope="col">Title Name</th>
              <th scope="col" class="text-end">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<product_title.length;i++) { %>
            <tr>
              <td>
                <%= i+1 %>
              </td>
              <td>
                <%= product_title[i].title %>
              </td>
              <td>
                <div class="table-action-btn justify-content-end">
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#editProductTitle<%= product_title[i].direct_order_product_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#deleteProductTitle<%= product_title[i].direct_order_product_id %>">
                    <i class="bi bi-trash-fill"></i>
                  </a>
                </div>
              </td>
            </tr>
            <div class="modal fade" id="editProductTitle<%= product_title[i].direct_order_product_id %>" tabindex="-1"
              aria-labelledby="editProductTitle<%= product_title[i].direct_order_product_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Product Title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-notification-form">
                      <form
                        action="/admin/edit-product-title?product_title_id=<%= product_title[i].direct_order_product_id %>&product_id=<%= product_id %>"
                        method="POST" enctype="multipart/form-data">
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Title name</label>
                          <input type="text" class="form-control" name="product_title"
                            value="<%= product_title[i].title %>" placeholder="Title Name">
                        </div>
                        <button type="submit" class="btn btn-primary">Edit</button>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="deleteProductTitle<%= product_title[i].direct_order_product_id %>" tabindex="-1"
              aria-labelledby="deleteProductTitle<%= product_title[i].direct_order_product_id %>Label"
              aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product Title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-banner-form">
                      <h3>Are you want to delete?</h3>
                    </div>
                    <a href="/admin/delete-product-title?product_title_id=<%= product_title[i].direct_order_product_id %>&product_id=<%= product_id %>"
                      class="btn btn-danger">Delete</a>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
