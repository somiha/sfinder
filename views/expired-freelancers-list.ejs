<section class="main-content">
    <div class="main-content-header">
        <span class="mobile-menu-icon">
            <i class="bi bi-list"></i>
        </span>
        <div class="main-content-header-top">
            <div class="admin-info">
                <img src="/images/admin-user-image.png" alt="">
                <h6>Admin</h6>
            </div>
            <a href="/admin/log-out" class="logout-btn">Logout</a>
        </div>
        <div class="main-content-header-bottom">
            <h4>Freelancer Verification Expired List</h4>
        </div>

        <div class="main-content-header-search-option">
            <form action="/admin/search-expired-freelancers" method="POST" enctype="multipart/form-data">
                <input type="text" class="form-control" placeholder="Search Freelancer" name="search_freelancer">
                <button class="btn btn-success" type="submit">Search</button>
            </form>
        </div>

    </div>
    <div class="user-content py-5">
        <div class="user-list-table">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Freelancer No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Specification</th>
                            <th scope="col">Email</th>
                            <th scope="col">Mobile Number</th>
                            <th scope="col">Acount Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0;i<paginated.length;i++) { %>
                        <tr>
                            <th scope="row">A-<%= paginated[i].freelancer_id %>
                            </th>
                            <td>
                                <%= paginated[i].freelancer_name %>
                            </td>
                            <td>
                                <%= paginated[i].freelancer_specialist %>
                            </td>
                            <td><%= paginated[i].user_email %></td>
                            <td><%= paginated[i].user_mobile_number %></td>
                            <td>
                                <%if(paginated[i].freelancer_acc_status==0) { %>
                                Unverified
                                <% } else { %>
                                Verified
                                <% } %>
                            </td>
                            <td>
                                <div class="table-action-btn">

                                    <a href="#" data-bs-toggle="modal"
                                        data-bs-target="#changeFreelancerStatus<%= paginated[i].freelancer_id %>">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>

                                </div>
                            </td>

                            <div class="modal fade" id="changeFreelancerStatus<%= paginated[i].freelancer_id %>"
                                tabindex="-1"
                                aria-labelledby="changeFreelancerStatus<%= paginated[i].freelancer_id %>Label"
                                aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Change Freelancer Status
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>

                                        <div class="modal-body">
                                            <div class="add-notification-form">
                                                <form
                                                    action="/admin/change-freelancer-enrollment-status/<%= paginated[i].freelancer_id %>"
                                                    method="POST" enctype="multipart/form-data">
                                                    <div class="add-notification-form-item">
                                                        <label for="" class="form-label">Status</label>
                                                        <select class="form-select" name="status">
                                                            <option disabled>Select Status</option>
                                                            <option value="0"
                                                                <%=paginated[i].status=='0' ? 'selected' : '' %>>
                                                                Unverified
                                                            </option>
                                                            <!-- <option value="1"
                                                                <%=paginated[i].status=='1' ? 'selected' : '' %>>
                                                                Verified
                                                            </option> -->
                                                        </select>
                                                    </div>

                                                    <button type="submit" class="btn btn-primary">Change</button>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Page Select -->

        <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
            <p class="text-center text-muted small mb-0">
                Show <%= paginated.length %> from <%= freelancer.length %> Freelancers
            </p>

            <div class="d-flex gap-2 align-items-center">
                <!-- Previous Button -->
                <% if (page > 1) { %>
                <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
                    href="/admin/get-expired-verification-freelancers?page=<%= page - 1 %>">
                    <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M7.125 0.75L0.875 7L7.125 13.25" stroke="#84818A" stroke-width="1.5"
                            stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <% } %>

                <!-- Page Numbers -->
                <% 
                                              const maxPagesToShow = 8; 
                                              const startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2)); 
                                              const endPage = Math.min(Math.ceil(freelancer.length / perPage), startPage + maxPagesToShow - 1); 
                                              for (let i = startPage; i <= endPage; i++) { 
                                            %>
                <a class="btn btn-sm <%= i === page ? 'btn-primary' : 'btn-outline-secondary' %>"
                    href="/admin/get-expired-verification-freelancers?page=<%= i %>">
                    <%= i %>
                </a>
                <% } %>

                <!-- Next Button -->
                <% if (page < Math.ceil(freelancer.length / perPage)) { %>
                <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
                    href="/admin/get-expired-verification-freelancers?page=<%= page + 1 %>">
                    <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0.875 0.75L7.125 7L0.875 13.25" stroke="#84818A" stroke-width="1.5"
                            stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <% } %>
            </div>
        </div>
    </div>
</section>
