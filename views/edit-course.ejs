<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h1 class="h3 mb-0 text-gray-800">Edit Course</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <form action="/admin/edit-course/<%= course_info[0].course_id %>" method="POST" enctype="multipart/form-data">
      <div class="add-course">
        <div class="row">
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Course Name</label>
              <input type="text" class="form-control" name="course_name" value="<%= course_info[0].course_name %>"
                placeholder="Course Name">
            </div>
          </div>
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Course Category</label>
              <select class="form-select" name="course_cat">
                <option disabled selected>Select Category</option>
                <% for(let i=0 ; i<course_cat.length;i++){ %>
                <option value="<%= course_cat[i].course_category_id %>"
                  <%=course_cat[i].course_category_id==course_info[0].course_category ? 'selected' : '' %>>
                  <%= course_cat[i].course_category_name %>
                </option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Course Price</label>
              <input type="text" class="form-control" name="course_price" value="<%= course_info[0].course_price %>"
                placeholder="Course Price">
            </div>
          </div>
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Course Instructor</label>
              <select class="form-select" name="course_instructor">
                <option disabled selected>Select Instructor</option>
                <% for(let i=0 ; i<course_instructor.length;i++){ %>
                <option value="<%= course_instructor[i].course_instructor_id %>" <%=course_instructor[i].course_instructor_id==course_info[0].course_instructor ? 'selected' : ''
                      %>>
                  <%= course_instructor[i].course_instructor_name %>
                </option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Course Cover Photo</label>
              <div class="custom-file-upload mb-5">
                <img src="<%= course_info[0].course_cover_photo %>" class="mb-4" alt="" id="course-cover-image" />
                <div class="custom-file-upload-box">
                  <i class="bi bi-plus-circle"></i>
                  <h6>Click here to upload File</h6>
                  <input type="file" id="course-cover-image-input" name="course_cover_image"
                    onchange="previewFile(this.id)">
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Course Description</label>
              <textarea class="form-control" name="course_description" id="" rows="5"
                placeholder="Course Description"><%= course_extra_info[0].course_short_description %></textarea>
            </div>
          </div>
          <div class="col-md-3">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Course Enrollment</label>
              <input type="number" class="form-control" name="course_enrollment"
                value="<%= course_extra_info[0].course_total_enrolled %>" placeholder="Course Enrollment">
            </div>
          </div>
          <div class="col-md-3">
            <div class="add-notification-form-item">
