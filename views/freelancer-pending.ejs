        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h1 class="h3 mb-0 text-gray-800">Pending Freelancers</h4>
    </div>
    <div class="main-content-header-search-option">
      <form action="/admin/search-freelancer-pending" method="POST" enctype="multipart/form-data">
        <input type="text" class="form-control" placeholder="Search Freelancer" name="search_freelancer">
        <button class="btn btn-success" type="submit">Search</button>
      </form>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="user-list-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Freelancer No</th>
              <th scope="col">Name</th>
              <th scope="col">Specification</th>
              <th scope="col">Acount Status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<paginated.length;i++) { %>
            <tr>
              <th scope="row">A-<%= paginated[i].freelancer_id %>
              </th>
              <td>
                <%= paginated[i].freelancer_name %>
              </td>
              <td>
                <%= paginated[i].freelancer_specialist %>
              </td>
              <td>
                <% if(paginated[i].freelancer_acc_status==-1){ %>
                Pending
                <% } else if(paginated[i].freelancer_acc_status==0) { %>
                Unverified
                <% } else { %>
                Verified
                <% } %>
              </td>
              <td>
                <div class="table-action-btn">
                  <a href="/admin/freelancer-info/<%= paginated[i].freelancer_id %>">
                    <i class="bi bi-eye-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#changeFreelancerStatus<%= paginated[i].freelancer_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                </div>
              </td>
              <div class="modal fade" id="changeFreelancerStatus<%= paginated[i].freelancer_id %>" tabindex="-1"
                aria-labelledby="changeFreelancerStatus<%= paginated[i].freelancer_id %>Label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">Change Freelancer Status</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <div class="add-notification-form">
                        <form action="/admin/change-freelancer-status/<%= paginated[i].freelancer_id %>" method="POST"
                          enctype="multipart/form-data">
                          <div class="add-notification-form-item">
                            <label for="" class="form-label">Status</label>
                            <select class="form-select" name="status" required>
                              <option selected>Select Status</option>
                              <option value="4">Rejected</option>
                              <option value="0">Approved</option>
                            </select>
                          </div>

                          <button type="submit" class="btn btn-primary">Change</button>
                        </form>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            </tr>
            <% } %>
