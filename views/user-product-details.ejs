<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>User Product Details</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="order-product-info order-box">
      <h3>
        Product Info
      </h3>
      <div class="row">
        <div class="col-lg-6">
          <div class="user-info-item">
            <h4>Product Name</h4>
            <p>
              <%= user_product_details[0].product_name %>
            </p>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="user-info-item">
            <h4>Product Description</h4>
            <p>
              <%= user_product_details[0].product_description %>
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Product Price</h4>
            <p>
              <%= user_product_details[0].product_price %> Tk
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Discount</h4>
            <p>
              <%= user_product_details[0].discount %> %
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Location</h4>
            <p>
              <%= user_product_details[0].discount %>
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Product Condition</h4>
            <p>
              <%= user_product_details[0].product_condition %>
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Product Brand</h4>
            <p>
              <%= user_product_details[0].product_brand %>
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Product Model</h4>
            <p>
              <%= user_product_details[0].product_model %>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="user-info-item">
            <h4>Category</h4>
            <p>
              <%= user_product_details[0].category_name %>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="user-info-item">
            <h4>Upload Date</h4>
            <p>
              <%= user_product_details[0].product_upload_date %>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="user-info-item">
            <h4>Is Negotiable</h4>
            <p>
              <% if(user_product_details[0].is_negotiable==1){ %>
              Yes
              <% } else { %>
              No
              <% } %>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="user-info-item">
            <h4>Product Status</h4>
            <p>
              <% if(user_product_details[0].product_status==1){ %>
              Approved
              <% } else if(user_product_details[0].product_status==-1) { %>
              Rejected
              <% } else { %>
              Pending
              <% } %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="order-details order-box">
      <h3>
        Product Image
      </h3>
      <div class="user-product-image">
        <% for(let i=0;i<user_product_image.length;i++) { %>
        <img src="<%= user_product_image[i].user_product_image_url %>" alt="" width="200px" height="200px">
        <% } %>
      </div>
    </div>
    <div class="order-delivery order-box">
      <h3>
        Product Contact Info
      </h3>
      <div class="row">
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Name</h4>
            <p>
              <%= user_product_contact_info[0].name %>
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Email</h4>
            <p>
              <%= user_product_contact_info[0].email %>
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="user-info-item">
            <h4>Contact No</h4>
            <p>
              <%= user_product_contact_info[0].contact_no %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
