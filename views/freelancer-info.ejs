<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Freelancer Info</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="user-info">
      <div class="user-info-item">
        <h4>Image</h4>
        <img src="<%= freelancer_info[0].freelancer_profile_pic %>" alt="" class="user-detail-image">
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Name</h4>
            <p>
              <%= freelancer_info[0].freelancer_name %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Freelancer Mobile Number</h4>
            <p>
              A-<%= freelancer_info[0].user_mobile_number %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Freelancer Email</h4>
            <p>
              A-<%= freelancer_info[0].user_email %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Freelancer Number</h4>
            <p>
              A-<%= freelancer_info[0].freelancer_id %>
            </p>
          </div>
        </div>
      </div>
      <% if (freelancer_info[0].primary_language) { %>
      <div class="col-md-6">
        <div class="user-info-item">
          <h4>Primary Language</h4>
          <p><%= freelancer_info[0].primary_language %></p>
        </div>
      </div>
      <% } %>
      <% if (freelancer_info[0].secondary_language) { %>
      <div class="col-md-6">
        <div class="user-info-item">
          <h4>Secondary Language</h4>
          <p><%= freelancer_info[0].secondary_language %></p>
        </div>
      </div>
      <% } %>
      <div class="row">
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Specialist</h4>
            <p>
              <%= freelancer_info[0].freelancer_specialist %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Rating</h4>
            <p>
              <%= freelancer_info[0].freelancer_review_star %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Freelancer Balance</h4>
            <p>
              <%= freelancer_info[0].freelancer_balance %>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Account Status</h4>
            <p>
              <% if(freelancer_info[0].freelancer_acc_status==-1){ %>
              Pending
              <% } else if(freelancer_info[0].freelancer_acc_status==0) { %>
              Unverified
              <% } else { %>
              Verified
              <% } %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Availibility</h4>
            <p>
              <%= freelancer_info[0].freelancer_availability %>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Joined</h4>
            <p>
              <%= freelancer_info[0].freelancer_availability %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Working Time</h4>
            <p>
              <%= freelancer_info[0].freelancer_working_time %>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Experience</h4>
            <p>
              <%= freelancer_info[0].freelancer_experience %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Location</h4>
            <p>
              <%= freelancer_info[0].freelancer_country %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Working Area</h4>
            <p>
              <%= freelancer_info[0].freelancer_working_area %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Qualification</h4>
            <p>
              <%= freelancer_info[0].freelancer_qualification %>
            </p>
          </div>
        </div>
        <div class="col-md-12">
          <div class="user-info-item">
            <h4>Description</h4>
            <p>
              <%= freelancer_info[0].freelancer_info %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Nid Front Image</h4>
            <img src="<%= freelancer_info[0].freelancer_nid_front_image_url %>" alt=""
              class="freelancer-credential-image">
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Nid Back Image</h4>
            <img src="<%= freelancer_info[0].freelancer_nid_back_image_url %>" alt=""
              class="freelancer-credential-image">
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Parents Nid Front Image</h4>
            <img src="<%= freelancer_info[0].freelancer_parents_death_certification_front_image_url %>" alt=""
              class="freelancer-credential-image">
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Parents Nid Back Image</h4>
            <img src="<%= freelancer_info[0].freelancer_parents_death_certification_back_image_url %>" alt=""
              class="freelancer-credential-image">
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Passport Front Image</h4>
            <img src="<%= freelancer_info[0].freelancer_passport_front_image_url %>" alt=""
              class="freelancer-credential-image">
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
