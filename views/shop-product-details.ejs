<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Shop Product Details</h4>
    </div>
  </div>
  <div class="user-content pt-2 pb-5">
    <a href="/admin/shop-product-image/<%= product_details[0].main_product_id %>" class="btn btn-primary">Extra
      Product Image</a>
    <div class="order-product-info order-box mt-3">
      <h3>
        Product Info
      </h3>
      <div class="row">
        <div class="col-lg-6">
          <div class="user-info-item">
            <h4>Product Name</h4>
            <p>
              <%= product_details[0].product_name %>
            </p>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="user-info-item">
            <h4>Category</h4>
            <p>
              <%= product_details[0].product_sub_cateogry_name %>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="user-info-item">
            <h4>Price</h4>
            <p>
              <%= product_details[0].product_price %> Tk
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="user-info-item">
            <h4>Discount</h4>
            <p>
              <%= product_details[0].product_discount %> %
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="user-info-item">
            <h4>Quantity</h4>
            <p>
              <%= product_details[0].product_quantity %>
            </p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="user-info-item">
            <h4>Direct Order</h4>
            <% if(product_details[0].direct_order==0){ %>
            <p>
              No
            </p>
            <% } else { %>
            <p>
              Yes
            </p>
            <% } %>
          </div>
        </div>
        <div class="col-md-12">
          <div class="user-info-item">
            <h4>Product Description</h4>
            <p>
              <%= product_details[0].product_description %>
            </p>
          </div>
        </div>
        <% if(product_details[0].direct_order==1){ %>
        <div class="col-md-12">
          <div class="user-info-item">
            <h4>Direct Product Title</h4>
            <p>
              <% for(let i=0;i<direct_order_product.length;i++){ %>
              <%= direct_order_product[i].title %> ,
              <% } %>
            </p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="order-details order-box">
    <h3>
      Product Image
    </h3>
    <div class="user-product-image">
      <img src="<%= product_details[0].product_image_url %>" alt="">
      <img src="<%= product_image[0].main_product_image_url %>" alt="">
    </div>
  </div>
  </div>
</section>
