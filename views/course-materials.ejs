<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Course Materials</h4>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCourseMaterial">Add
        Material</button>
    </div>
    <div class="modal fade" id="addCourseMaterial" tabindex="-1" aria-labelledby="addCourseMaterialLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Add Material</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="add-notification-form">
              <form action="/admin/add-course-material?course_id=<%= course[0].course_id %>" method="POST"
                enctype="multipart/form-data" id="addMaterialform">
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Name</label>
                  <input type="text" class="form-control" name="material_name" placeholder="Material Name">
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Type</label>
                  <select class="form-select" name="material_type">
                    <option selected>Select Type</option>
                    <option value="Video">Video</option>
                    <option value="Pdf">Pdf</option>
                  </select>
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Serial</label>
                  <input type="number" class="form-control" name="material_serial" placeholder="Material Serial">
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Status</label>
                  <select class="form-select" name="material_status">
                    <option selected>Select Status</option>
                    <option value="1">Free</option>
                    <option value="0">Paid</option>
                  </select>
                </div>
                <div class="add-notification-form-item">
                  <label for="" class="form-label">File</label>
                  <div class="custom-file-upload mb-5">
                    <div class="custom-file-upload-box">
                      <i class="bi bi-plus-circle"></i>
                      <h6>Click here to upload File</h6>
                      <input type="file" name="material_file" id="uploadMaterial" required>
                    </div>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary" id="addMaterialformButton">Add</button>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="user-content pt-3 pb-5">
    <h4 class="pb-3 text-primary">Course Name : <%= course[0].course_name %>
    </h4>
    <div class="banner-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Material Name</th>
              <th scope="col">Type</th>
              <th scope="col">Serial</th>
              <th scope="col">Status</th>
              <th scope="col">Link</th>
              <th scope="col" class="text-end">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<course_materials.length;i++){ %>
            <tr>
              <td>
                <%= course_materials[i].course_material_name %>
              </td>
              <td>
                <%= course_materials[i].course_material_type %>
              </td>
              <td>
                <%= course_materials[i].course_material_serial %>
              </td>
              <td>
                <% if(course_materials[i].course_material_is_free==1){ %>
                Free
                <% } else { %>
                Paid
                <% } %>
              </td>
              <td>
                <a href="<%= course_materials[i].course_material_url %>" target="_blank" class="text-primary">Link</a>
              </td>
              <td>
                <div class="table-action-btn justify-content-end">
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#editCourseMaterial<%= course_materials[i].course_material_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#deleteCourseMaterial<%= course_materials[i].course_material_id %>">
                    <i class="bi bi-trash-fill"></i>
                  </a>
                </div>
              </td>
            </tr>
            <div class="modal fade" id="editCourseMaterial<%= course_materials[i].course_material_id %>" tabindex="-1"
              aria-labelledby="editCourseMateria<%= course_materials[i].course_material_id %>lLabel" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Material</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-notification-form">
                      <form
                        action="/admin/edit-course-material?course_id=<%= course[0].course_id %>&course_material_id=<%= course_materials[i].course_material_id %>"
                        id="changeMaterialForm<%= course_materials[i].course_material_id %>" method="POST"
                        enctype="multipart/form-data" onsubmit="changeMaterial(this.id)">
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Name</label>
                          <input type="text" class="form-control"
                            value="<%= course_materials[i].course_material_name %>" name="material_name"
                            placeholder="Material Name">
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Type</label>
                          <select class="form-select" name="material_type">
                            <option selected>Select Type</option>
                            <option value="Video" <%=course_materials[i].course_material_type=='Video' ? 'selected'
                                  : '' %>>Video</option>
                            <option value="Pdf" <%=course_materials[i].course_material_type=='Pdf' ? 'selected' : ''
                                  %>>Pdf</option>
                          </select>
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Serial</label>
                          <input type="number" class="form-control"
                            value="<%= course_materials[i].course_material_serial %>" name="material_serial"
                            placeholder="Material Serial">
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Status</label>
                          <select class="form-select" name="material_status">
                            <option selected>Select Status</option>
                            <option value="1" <%=course_materials[i].course_material_is_free==1 ? 'selected' : '' %>>
                              Free</option>
                            <option value="0" <%=course_materials[i].course_material_is_free==0 ? 'selected' : '' %>>
                              Paid</option>
                          </select>
                        </div>
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">File</label>
                          <div class="custom-file-upload mb-5">
                            <div class="custom-file-upload-box">
                              <i class="bi bi-plus-circle"></i>
                              <h6>Click here to upload File</h6>
                              <input type="file" name="material_file">
                            </div>
                          </div>
                        </div>
                        <button type="submit" class="btn btn-primary"
                          id="editMatrialFormButton<%= course_materials[i].course_material_id %>">Edit</button>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="deleteCourseMaterial<%= course_materials[i].course_material_id %>" tabindex="-1"
              aria-labelledby="deleteCourseMaterial<%= course_materials[i].course_material_id %>Label"
              aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Course Material</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-banner-form">
                      <h3>Are you want to delete?</h3>
                    </div>
                    <a href="/admin/delete-course-material?course_id=<%= course[0].course_id %>&course_material_id=<%= course_materials[i].course_material_id %>"
                      class="btn btn-danger">Delete</a>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
