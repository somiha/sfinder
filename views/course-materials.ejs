<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Set active item based on current URL without scrolling
    const currentPath = window.location.pathname;
    document.querySelectorAll('.admin-main-menu li').forEach(item => {
      const link = item.querySelector('a');
      if (link && link.getAttribute('href') === currentPath) {
        item.classList.add('active');
      } else {
        item.classList.remove('active');
      }
    });

    // Optional: If you want to manually scroll to active item later
    // you can call this function separately
    function scrollToActiveItem() {
      const activeItem = document.querySelector('.admin-main-menu li.active');
      if (activeItem) {
        const menu = document.querySelector('.admin-main-menu');
        const itemTop = activeItem.offsetTop;
        const itemHeight = activeItem.offsetHeight;
        const menuHeight = menu.offsetHeight;

        // Calculate scroll position to show item at top or natural position
        if (itemTop + itemHeight > menu.scrollTop + menuHeight) {
          menu.scrollTop = itemTop - 20;
        } else if (itemTop < menu.scrollTop) {
          menu.scrollTop = itemTop - 20;
        }
      }
    }    // Call this only when needed, not automatically
    // scrollToActiveItem();
  });
</script>

<script>
  function uploadMaterial(event) {
    event.preventDefault(); // stop normal form submit

    const form = document.getElementById('addMaterialform');
    const formData = new FormData(form);

    const xhr = new XMLHttpRequest();
    xhr.open('POST', form.action, true);

    // Handle upload progress
    xhr.upload.addEventListener('progress', function (e) {
      if (e.lengthComputable) {
        const percentComplete = Math.round((e.loaded / e.total) * 100);
        const progressBar = document.getElementById('uploadProgressBar');
        progressBar.style.width = percentComplete + '%';
        progressBar.setAttribute('aria-valuenow', percentComplete);
        progressBar.innerText = percentComplete + '%';
      }
    });

    // Handle when upload is complete
    xhr.onload = function () {
      if (xhr.status === 200) {
        // Upload completed
        const progressBar = document.getElementById('uploadProgressBar');
        progressBar.classList.remove('progress-bar-animated');
        progressBar.innerText = 'Upload Complete!';
        // Optional: reload or close modal
        setTimeout(() => {
          location.reload();
        }, 1000);
      } else {
        alert('Upload failed!');
      }
    };

    xhr.send(formData);
  }

  // Attach to form submit
  document.getElementById('addMaterialform').addEventListener('submit', uploadMaterial);
</script>

