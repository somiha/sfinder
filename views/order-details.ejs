      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h1 class="h3 mb-0 text-gray-800">Order Details (Order No <%= order_details[0].order_id %>)</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="order-product-info order-box">
      <h3>
        Order Products
      </h3>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Quantity</th>
              <th scope="col">Total Price</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<order_info.length;i++){ %>
            <tr>
              <td>
                <div class="order-product">
                  <img src="<%= order_info[i].product_image_url %>" alt="">
                  <h6>
                    <%= order_info[i].product_name %>
                  </h6>
                </div>
              </td>
              <td>
                <%= order_info[i].product_quantity %>
              </td>
              <td>
                <%= order_info[i].product_total_price %>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="order-details order-box">
      <h3>
        Order Details
      </h3>
      <div class="row">
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Total Price</h4>
