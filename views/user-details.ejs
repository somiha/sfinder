<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>User Info</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="user-info">
      <div class="user-info-item">
        <h4>Image</h4>
        <% let imgSrc;
            if(userInfo[0].user_image_url){imgSrc=userInfo[0].user_image_url}else{imgSrc="/images/admin-user-image.png"
            } %>
        <img src="<%= imgSrc %>" alt="" class="user-detail-image">
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Name</h4>
            <p>
              <%= userInfo[0].user_name %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Email</h4>
            <p>
              <%= userInfo[0].user_email %>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Address</h4>
            <p>
              <%= userInfo[0].user_address %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Mobile Number</h4>
            <p>
              <%= userInfo[0].user_mobile_number %>
            </p>
          </div>
        </div>
        <% if(userInfo[0].amount){ %>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>User Balance</h4>
            <p>
              <%= userInfo[0].amount %>
            </p>
          </div>
        </div>
        <% } %>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Verification</h4>
            <% if(userInfo[0].user_verification==1){ %>
            <p>
              Verified
            </p>
            <% }else{ %>
            <p>
              Non Verified
            </p>
            <% } %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
