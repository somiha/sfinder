        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>All Users</h4>
      <div class="main-content-header-bottom-button">
        <a href="/admin/user-report" class="btn btn-primary">User Report</a>
        <a href="/admin/user-reset" class="btn btn-primary">User Reset</a>
        <!-- <a href="/admin/subscription-overed-users" class="btn btn-primary">Subscription Overed User</a>
        <a href="/admin/one-year-overed-verified-user" class="btn btn-primary">One Year Overed Verified User</a> -->
      </div>
    </div>
    <div class="main-content-header-search-option">
      <form action="/admin/search-user" method="POST" enctype="multipart/form-data">
        <input type="text" class="form-control" placeholder="Search User" name="search_user">
        <button class="btn btn-success" type="submit">Search</button>
      </form>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="user-list-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Serial No</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Mobile Number</th>
              <th scope="col">Status</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i=0 ; i<paginated.length ; i++){ %>
            <tr>
              <th scope="row">
                <%= (page - 1) * perPage + i + 1 %>
              </th>

              <td>
                <div class="user-table-user-name">
                  <% let imgSrc;
                        if(paginated[i].user_image_url){imgSrc=paginated[i].user_image_url}else{imgSrc="/images/admin-user-image.png"
                        } %>
                  <img src="<%= imgSrc %>" alt="" class="user-image">
                  <h6>
                    <%= paginated[i].user_name %>
                  </h6>
                </div>
              </td>
              <td>
                <%= paginated[i].user_email %>
              </td>
              <td>
                <%= paginated[i].user_mobile_number %>
              </td>
              <td>
                <% if(paginated[i].user_verification==1){ %>
                Unbanned
                <% } else { %>
                Banned
                <% } %>
              </td>
              <td>
                <div class="table-action-btn">
                  <a href="/admin/user-details/<%= paginated[i].user_id %>">
                    <i class="bi bi-eye-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal" data-bs-target="#editUserVerification<%= paginated[i].user_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal" data-bs-target="#deleteUser<%= paginated[i].user_id %>">
                    <i class="bi bi-trash-fill"></i>
                  </a>
                </div>
              </td>
            </tr>

            <div class="modal fade" id="deleteUser<%= paginated[i].user_id %>" tabindex="-1"
              aria-labelledby="deleteUserLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="deleteUserLabel">Delete User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Are you sure you want to delete user <%= user[i].user_name %>?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/admin/delete-user/<%= paginated[i].user_id %>" method="GET" style="display: inline;">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>

            <div class="modal fade" id="editUserVerification<%= paginated[i].user_id %>" tabindex="-1"
              aria-labelledby="editUserVerification<%= paginated[i].user_id %>Label" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Change User Ban Status</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-notification-form">
                      <form action="/admin/change-user-verification/<%= paginated[i].user_id %>" method="POST"
                        enctype="multipart/form-data">
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Change Status</label>
                          <select class="form-select" name="user_verification_status">
                            <option disabled>Select Status</option>
                            <option value="0" <%=paginated[i].user_verification==0 ? 'selected' : '' %>>Banned</option>
                            <option value="1" <%=paginated[i].user_verification==1 ? 'selected' : '' %>>Unbanned
                            </option>
                          </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Page Select -->

    <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
      <p class="text-center text-muted small mb-0">
        Show <%= paginated.length %> from <%= user.length %> users
      </p>

      <div class="d-flex gap-2 align-items-center">
        <!-- Previous Button -->
        <% if (page > 1) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/user?page=<%= page - 1 %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.125 0.75L0.875 7L7.125 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>

        <!-- Page Numbers -->
        <% 
        const maxPagesToShow = 8; 
        const startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2)); 
        const endPage = Math.min(Math.ceil(user.length / perPage), startPage + maxPagesToShow - 1); 
        for (let i = startPage; i <= endPage; i++) { 
      %>
        <a class="btn btn-sm <%= i === page ? 'btn-primary' : 'btn-outline-secondary' %>"
          href="/admin/user?page=<%= i %>">
          <%= i %>
        </a>
        <% } %>

        <!-- Next Button -->
        <% if (page < Math.ceil(user.length / perPage)) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/user?page=<%= page + 1 %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.875 0.75L7.125 7L0.875 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>
      </div>
    </div>

  </div>
</section>
