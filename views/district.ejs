<section class="main-content">
    <div class="main-content-header">
        <span class="mobile-menu-icon">
            <i class="bi bi-list"></i>
        </span>

        <div class="main-content-header-top">
            <div class="admin-info">
                <img src="/images/admin-user-image.png" alt="">
                <h6>Admin</h6>
            </div>
            <a href="/admin/log-out" class="logout-btn">Logout</a>
        </div>
        <div class="main-content-header-bottom">
            <h4>All Districts</h4>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDistrict"><i
                    class="bi bi-plus me-2"></i>Add
                District</button>
        </div>
        <div class="modal fade" id="addDistrict" tabindex="-1" aria-labelledby="addDistrictLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add District</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="add-district-form">
                            <form action="/admin/add-district" method="POST">
                                <div class="mb-3">
                                    <label for="division_id" class="form-label">Division</label>
                                    <select class="form-select" id="division_id" name="division_id" required>
                                        <% for (let i=0 ; i<division.length ; i++){ %>
                                        <option value="<%= division[i].division_id %>">
                                            <%= division[i].division_name %></option>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="name" class="form-label">District Name</label>
                                    <input type="text" class="form-control" id="name" name="name"
                                        placeholder="District Name" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="district-content py-5">
            <div class="district-list-table">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Serial No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Division Name</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0 ; i<districts.length ; i++){ %>
                            <tr>
                                <th scope="row">
                                    <%= districts[i].district_id %>
                                </th>

                                <td>
                                    <%= districts[i].district_name %>
                                </td>
                                <td>
                                    <%= districts[i].division_name %>

                                </td>
                                <td>
                                    <div class="table-action-btn">
                                        <a href="#" data-bs-toggle="modal"
                                            data-bs-target="#editDistrict<%= districts[i].district_id %>">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a href="#" data-bs-toggle="modal"
                                            data-bs-target="#deleteDistrict<%= districts[i].district_id %>">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>

                            <div class="modal fade" id="editDistrict<%= districts[i].district_id %>" tabindex="-1"
                                aria-labelledby="editDistrictLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editDistrictLabel">Edit District</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/admin/edit-district/<%= districts[i].district_id %>"
                                                method="POST">
                                                <div class="mb-3">
                                                    <label for="editDistrictName" class="form-label">Name</label>
                                                    <input type="text" class="form-control" id="editDistrictName"
                                                        name="name" value="<%= districts[i].district_name %>">

                                                </div>
                                                <div class="mb-3">
                                                    <label for="editDivisionId" class="form-label">Division</label>
                                                    <select class="form-select" id="editDivisionId" name="division_id">
                                                        <% for (let j = 0; j < division.length; j++) { %>
                                                        <option value="<%= division[j].division_id %>"
                                                            <%= districts[i].division_id === division[j].division_id ? "selected" : "" %>>
                                                            <%= division[j].division_name %>
                                                        </option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Update</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="deleteDistrict<%= districts[i].district_id %>" tabindex="-1"
                                aria-labelledby="deleteDistrictLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteDistrictLabel">Delete District</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete district?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Cancel</button>
                                            <form action="/admin/delete-district/<%= districts[i].district_id %>"
                                                method="GET" style="display: inline;">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Page Select -->
            <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
                <p class="text-center text-muted small mb-0">
                    Show <%= districts.length %> from <%= totalDistricts %> districts
                </p>

                <div class="d-flex gap-2 align-items-center">
                    <!-- Previous Button -->
                    <% if (page > 1) { %>
                    <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
                        href="/admin/district?page=<%= page - 1 %>">
                        <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M7.125 0.75L2.5 7.375L7.125 14L6.4375 13.25L2.5 7.375L0 6.6875L1.0625 5.625L2.5 7.375L1.0625 9.125L0 7.6875L2.5 4.6875L7.125 0.75Z"
                                fill="#1C1D1F" />
                        </svg>
                    </a>
                    <% } %>

                    <!-- Page Numbers -->
                    <% for (let i = 1; i <= totalPages; i++) { %>
                    <a class="btn btn-outline-secondary btn-sm <%= page === i ? 'active' : '' %>"
                        href="/admin/district?page=<%= i %>">
                        <%= i %>
                    </a>
                    <% } %>

                    <!-- Next Button -->
                    <% if (page < totalPages) { %>
                    <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
                        href="/admin/district?page=<%= page + 1 %>">
                        <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M0.875 0.75L5.5 7.375L0.875 14L1.5625 13.25L5.5 7.375L8 6.6875L7.0625 5.625L5.5 7.375L7.0625 9.125L8 7.6875L5.5 4.6875L0.875 0.75Z"
                                fill="#1C1D1F" />
                        </svg>
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
</section>
