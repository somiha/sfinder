<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Freelancer Withdraw</h4>
      <div class="main-content-header-search-option">

        <div class="user-product-filtering">
          <form action="/admin/filter" method="POST">

            <select class="form-select" onchange="this.form.submit()" name="filter_status">
              <option disabled selected>Select Status</option>
              <option value="Pending">Pending</option>
              <option value="1">Done</option>

            </select>

          </form>
        </div>
      </div>
    </div>
    <div class="main-content-header-search-option">
      <form action="/admin/search-freelancer-withdraw" method="POST" enctype="multipart/form-data">
        <input type="text" class="form-control" placeholder="Search Freelancer" name="search_freelancer">
        <button class="btn btn-success" type="submit">Search</button>
      </form>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="user-list-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Freelancer No</th>
              <th scope="col">Name</th>
              <th scope="col">Amount</th>
              <th scope="col">Status</th>
              <th scope="col">Date</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<paginated.length;i++) { %>
            <tr>
              <th scope="row">A-<%= paginated[i].freelancer_id %>
              </th>
              <td>
                <%= paginated[i].freelancer_name %>
              </td>
              <td>
                <%= paginated[i].amount %>
              </td>
              <td>
                <% if(paginated[i].status=="Pending"){ %>
                Pending
                <% } else { %>
                Done
                <% } %>
              </td>
              <td>
                <%= paginated[i].date
                  ? new Date(paginated[i].date).toLocaleString('en-US', {
                      weekday: 'short',
                      month: 'short',
                      day: '2-digit',
                      year: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit',
                      second: '2-digit',
                      hour12: false
                    })
                  : 'null' %>


              </td>
              <td>
                <div class="table-action-btn">
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#freelancerWithdrawDetails<%= paginated[i].freelancer_balance_withdraw_id %>">
                    <i class="bi bi-eye-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#changeFreelancerWithdrawStatus<%= paginated[i].freelancer_balance_withdraw_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>

                  <a href="/admin/withdraw-notes/<%= paginated[i].freelancer_balance_withdraw_id %>">
                    Note
                  </a>

                </div>
              </td>

            </tr>
            <div class="modal fade"
              id="changeFreelancerWithdrawStatus<%= paginated[i].freelancer_balance_withdraw_id %>" tabindex="-1"
              aria-labelledby="changeFreelancerWithdrawStatus<%= paginated[i].freelancer_balance_withdraw_id %>Label"
              aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Change Freelancer Withdraw Status</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="add-notification-form">
                      <form
                        action="/admin/change-freelancer-withdraw-status/<%= paginated[i].freelancer_balance_withdraw_id %>"
                        method="POST" enctype="multipart/form-data">
                        <div class="add-notification-form-item">
                          <label for="" class="form-label">Status</label>
                          <select class="form-select" name="status">
                            <option disabled>Select Status</option>
                            <option value="0" <%=paginated[i].status=='0' ? 'selected' : '' %>>Pending
                            </option>
                            <option value="1" <%=paginated[i].status=='1' ? 'selected' : '' %>>Done</option>
                          </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Change</button>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="freelancerWithdrawDetails<%= paginated[i].freelancer_balance_withdraw_id %>"
              tabindex="-1"
              aria-labelledby="freelancerWithdrawDetails<%= paginated[i].freelancer_balance_withdraw_id %>Label"
              aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">View Withdraw Details</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="daily-update-info">
                      <div class="daily-update-item-box">
                        <h5>Name</h5>
                        <p>
                          <%= paginated[i].name %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Address</h5>
                        <p>
                          <%= paginated[i].address %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Bank Name</h5>
                        <p>
                          <%= paginated[i].bank_name %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Bank Acc Holder Name</h5>
                        <p>
                          <%= paginated[i].bank_acc_holder_name %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Division</h5>
                        <p>
                          <%= paginated[i].division %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>District</h5>
                        <p>
                          <%= paginated[i].district %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Branch Name</h5>
                        <p>
                          <%= paginated[i].branch_name %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Routing Number</h5>
                        <p>
                          <%= paginated[i].routing_number %>
                        </p>
                      </div>
                      <div class="daily-update-item-box">
                        <h5>Amount</h5>
                        <p>
                          <%= paginated[i].amount %>
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Page Select -->

    <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
      <p class="text-center text-muted small mb-0">
        Show <%= paginated.length %> from <%= freelancer_withdraw.length %> Freelancers
      </p>

      <div class="d-flex gap-2 align-items-center">
        <!-- Previous Button -->
        <% if (page > 1) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/freelancer-withdraw?page=<%= page - 1 %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.125 0.75L0.875 7L7.125 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>

        <!-- Page Numbers -->
        <% 
                                          const maxPagesToShow = 8; 
                                          const startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2)); 
                                          const endPage = Math.min(Math.ceil(freelancer_withdraw.length / perPage), startPage + maxPagesToShow - 1); 
                                          for (let i = startPage; i <= endPage; i++) { 
                                        %>
        <a class="btn btn-sm <%= i === page ? 'btn-primary' : 'btn-outline-secondary' %>"
          href="/admin/freelancer-withdraw?page=<%= i %>">
          <%= i %>
        </a>
        <% } %>

        <!-- Next Button -->
        <% if (page < Math.ceil(freelancer_withdraw.length / perPage)) { %>
        <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
          href="/admin/freelancer-withdraw?page=<%= page + 1 %>">
          <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.875 0.75L7.125 7L0.875 13.25" stroke="#84818A" stroke-width="1.5" stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </a>
        <% } %>
      </div>
    </div>
  </div>
</section>
