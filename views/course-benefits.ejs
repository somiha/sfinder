    </div>
    <div class="modal fade" id="addCourseBenefit" tabindex="-1" aria-labelledby="addCourseBenefitLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Add Benefit</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="add-notification-form">
              <form action="/admin/add-course-benefit?course_id=<%= course[0].course_id %>" method="POST"
                enctype="multipart/form-data">
                <div class="add-notification-form-item">
                  <label for="" class="form-label">Name</label>
                  <input type="text" class="form-control" name="benefit_name" placeholder="Benefit Name">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
