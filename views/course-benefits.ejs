    <h4 class="pb-3 text-primary">Course Name : <%= course[0].course_name %>
    </h4>
    <div class="banner-table">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Benefit Name</th>
              <th scope="col" class="text-end">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<course_benefits.length;i++){ %>
            <tr>
              <td>
                <%= course_benefits[i].course_benefit_name %>
              </td>
              <td>
                <div class="table-action-btn justify-content-end">
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#editCourseBenefit<%= course_benefits[i].course_benefit_id %>">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <a href="#" data-bs-toggle="modal"
                    data-bs-target="#deleteCourseBenefit<%= course_benefits[i].course_benefit_id %>">
