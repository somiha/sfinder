<section class="main-content">
  <div class="main-content-header">
    <span class="mobile-menu-icon">
      <i class="bi bi-list"></i>
    </span>
    <div class="main-content-header-top">
      <div class="admin-info">
        <img src="/images/admin-user-image.png" alt="">
        <h6>Admin</h6>
      </div>
      <a href="/admin/log-out" class="logout-btn">Logout</a>
    </div>
    <div class="main-content-header-bottom">
      <h4>Course Details</h4>
      <a href="#" class="btn btn-primary">Edit Details</a>
    </div>
  </div>
  <div class="user-content py-5">
    <div class="user-info">
      <div class="row">
        <div class="col-lg-6">
          <div class="user-info-item">
            <h4>Course Name</h4>
            <p>
              <%= course_info[0].course_name %>
            </p>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="user-info-item">
            <h4>Category Name</h4>
            <p>
              <%= course_info[0].course_category_name %>
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="user-info-item">
            <h4>Course Price</h4>
            <p>
              <%= course_info[0].course_price %> Taka
            </p>
          </div>
        </div>
      </div>
      <div class="user-info-item">
        <h4>Image</h4>
        <img src="<%= course_info[0].course_cover_photo %>" alt="">
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="user-info-item">
            <h4>Description</h4>
            <p>
              <%= course_extra_info[0].course_short_description %>
            </p>
          </div>
        </div>
      </div>
      <div class="row my-4">
        <div class="col-md-3 mb-3 mb-md-0">
          <div class="course-info-item">
            <img src="/images/person-check.png" alt="">
            <h6>কোর্সটি করেছেন <%= course_extra_info[0].course_total_enrolled %> জন</h6>
          </div>
        </div>
        <div class="col-md-3 mb-3 mb-md-0">
          <div class="course-info-item">
            <img src="/images/clock.png" alt="">
            <h6>সময় লাগবে <%= course_extra_info[0].course_time %> ঘন্টা</h6>
          </div>
        </div>
        <div class="col-md-3 mb-3 mb-md-0">
          <div class="course-info-item">
            <img src="/images/play-circle.png" alt="">
            <h6>
              <%= course_extra_info[0].course_total_video %> টি ভিডিও লেকচার
            </h6>
          </div>
        </div>
        <div class="col-md-3">
          <div class="course-info-item">
            <img src="/images/journal-check.png" alt="">
            <h6>
              <%= course_extra_info[0].course_total_pdf %> টি সার্কিট pdf
            </h6>
          </div>
        </div>
      </div>
      <div class="row my-5">
        <h4 class="mb-4">Course Instructor</h4>
        <div class="col-lg-6">
          <div class="instructor-image mb-4 mb-lg-0">
            <img src="<%= course_instructor[0].course_instructor_photo %>" alt="" class="course-instructor-image">
          </div>
        </div>
        <div class="col-lg-6">
          <div class="user-info-item">
            <h4>Instructor Name</h4>
            <p>
              <%= course_instructor[0].course_instructor_name %>
            </p>
          </div>
          <div class="user-info-item">
            <h4>Instructor Info</h4>
            <p>
              <%= course_instructor[0].course_instructor_info %>
            </p>
          </div>
          <div class="user-info-item">
            <h4>Designation</h4>
            <p>
              <%= course_instructor[0].course_instructor_designation %>
            </p>
          </div>
        </div>
      </div>
      <div class="course-benefit">
        <h4 class="mb-4">What you will learn by doing the course</h4>
        <div class="course-benefit-content">
          <% for (let i=0 ;i<course_benefit.length ;i++) { %>
          <div class="course-benefit-item">
            <i class="bi bi-check-circle"></i>
            <p>
              <%= course_benefit[i].course_benefit_name %>
            </p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const activeItem = document.querySelector(".active");
    if (activeItem) {
      activeItem.scrollIntoView({
