                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Alert</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <div class="add-notification-form">
                          <form action="/admin/edit-alert/<%= alert[i].alert_id %>" method="POST"
                            enctype="multipart/form-data">
                            <div class="add-notification-form-item">
                              <label for="" class="form-label">Alert File</label>
                              <input type="file" class="form-control" name="alert_file" placeholder="Alert File">
                            </div>
                            <div class="add-notification-form-item">
                              <label for="" class="form-label">Alert Link</label>
                              <input type="text" class="form-control" name="alert_link" value="<%= alert[i].link %>"
