                          <div class="daily-update-item-box">
                            <h5>Alert File</h5>
                            <p>
                              <a href="<%= alert[i].alert_file_url %>">
                                File
                              </a>
                            </p>
                          </div>
                          <div class="daily-update-item-box">
                            <h5>Alert Active</h5>
                            <% if(alert[i].is_active==1){ %>
                            <p>Yes</p>
                            <% } else { %>
                            <p>No</p>
                            <% } %>
                          </div>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
