    <div class="user-content py-5">
        <div class="user-list-table">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Serial No</th>
                            <th scope="col">Plan Name</th>
                            <th scope="col">Price</th>

                            <th scope="col">Plan Duration</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i=0 ; i<paginated.length ; i++){ %>
                        <tr>
                            <th scope="row">
                                <%= (page - 1) * perPage + i + 1 %>
                            </th>


                            <td>
                                <%= paginated[i].name %>
                            </td>
                            <td>
                                <%= paginated[i].price %>
                            </td>

                            <td><%= Math.round(paginated[i].plan_duration / 24) %> Days</td>
                            <td>
                                <div class="table-action-btn">
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#view<%= paginated[i].id %>">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#edit<%= paginated[i].id %>">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#delete<%= paginated[i].id %>">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>

                        <div class="modal fade" id="view<%= paginated[i].id %>" tabindex="-1"
                            aria-labelledby="viewUserLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="viewUserLabel">View</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label for="exampleInputEmail1" class="form-label">Plan
                                                Name</label>
                                            <input type="text" class="form-control" value="<%= paginated[i].name %>"
                                                readonly>
                                        </div>

                                        <div class="mb-3">
                                            <label for="exampleInputEmail1" class="form-label">Price</label>
                                            <input type="text" class="form-control" value="<%= paginated[i].price %>"
                                                readonly>
                                        </div>

                                        <div class="mb-3">
                                            <label for="exampleInputEmail1" class="form-label">Description</label>
                                            <textarea name="description"
                                                class="form-control"><%= paginated[i].description %></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleInputEmail1" class="form-label">Plan
                                                Duration (Day)</label>
                                            <input type="text" class="form-control"
                                                value="<%= Math.round(paginated[i].plan_duration / 24) %>" readonly>
                                        </div>


                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" id="delete<%= paginated[i].id %>" tabindex="-1"
                            aria-labelledby="deleteUserLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteUserLabel">Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Cancel</button>
                                        <form action="/admin/delete-plan/<%= paginated[i].id %>" method="GET"
                                            style="display: inline;">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" id="edit<%= paginated[i].id %>" tabindex="-1"
                            aria-labelledby="edit<%= paginated[i].user_id %>Label" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Subscription Plan</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="add-notification-form">
                                            <form action="/admin/edit-plan/<%= paginated[i].id %>" method="POST"
                                                enctype="multipart/form-data">
                                                <div class="mb-3">
                                                    <label for="exampleInputEmail1" class="form-label">Plan Name</label>
                                                    <input type="text" class="form-control" id="exampleInputEmail1"
                                                        aria-describedby="emailHelp" name="name"
                                                        value="<%= paginated[i].name %>">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="exampleInputEmail1" class="form-label">Price</label>
                                                    <input type="number" class="form-control" id="exampleInputEmail1"
                                                        aria-describedby="emailHelp" name="price"
                                                        value="<%= paginated[i].price %>">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="exampleInputEmail1"
                                                        class="form-label">Description</label>
                                                    <textarea name="description"
                                                        class="form-control"><%= paginated[i].description %></textarea>

                                                </div>
                                                <div class="mb-3">
                                                    <label for="exampleInputEmail1" class="form-label">Plan
                                                        Duration (Day)</label>
                                                    <input type="number" class="form-control" id="exampleInputEmail1"
                                                        aria-describedby="emailHelp" name="duration"
                                                        value="<%= Math.round(paginated[i].plan_duration / 24) %>">
                                                </div>

                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Page Select -->

        <div class="d-flex flex-column flex-xl-row align-items-center justify-content-between gap-3 py-4">
            <p class="text-center text-muted small mb-0">
                Show <%= paginated.length %> from <%= plan.length %> plans
            </p>

            <div class="d-flex gap-2 align-items-center">
                <!-- Previous Button -->
                <% if (page > 1) { %>
                <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
                    href="/admin/plan?page=<%= page - 1 %>">
                    <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M7.125 0.75L0.875 7L7.125 13.25" stroke="#84818A" stroke-width="1.5"
                            stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <% } %>

                <!-- Page Numbers -->
                <% 
        const maxPagesToShow = 8; 
        const startPage = Math.max(1, page - Math.floor(maxPagesToShow / 2)); 
        const endPage = Math.min(Math.ceil(plan.length / perPage), startPage + maxPagesToShow - 1); 
        for (let i = startPage; i <= endPage; i++) { 
      %>
                <a class="btn btn-sm <%= i === page ? 'btn-primary' : 'btn-outline-secondary' %>"
                    href="/admin/plan?page=<%= i %>">
                    <%= i %>
                </a>
                <% } %>

                <!-- Next Button -->
                <% if (page < Math.ceil(plan.length / perPage)) { %>
                <a class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center"
                    href="/admin/plan?page=<%= page + 1 %>">
                    <svg width="8" height="10" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0.875 0.75L7.125 7L0.875 13.25" stroke="#84818A" stroke-width="1.5"
                            stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <% } %>
            </div>
        </div>

    </div>
</section>
