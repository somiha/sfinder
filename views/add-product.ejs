<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Set active item based on current URL without scrolling
    const currentPath = window.location.pathname;
    document.querySelectorAll('.admin-main-menu li').forEach(item => {
      const link = item.querySelector('a');
      if (link && link.getAttribute('href') === currentPath) {
        item.classList.add('active');
      } else {
        item.classList.remove('active');
      }
    });

    // Optional: If you want to manually scroll to active item later
    // you can call this function separately
    function scrollToActiveItem() {
      const activeItem = document.querySelector('.admin-main-menu li.active');
      if (activeItem) {
        const menu = document.querySelector('.admin-main-menu');
        const itemTop = activeItem.offsetTop;
        const itemHeight = activeItem.offsetHeight;
        const menuHeight = menu.offsetHeight;

        // Calculate scroll position to show item at top or natural position
        if (itemTop + itemHeight > menu.scrollTop + menuHeight) {
          menu.scrollTop = itemTop - 20;
        } else if (itemTop < menu.scrollTop) {
          menu.scrollTop = itemTop - 20;
        }
      }
    }    // Call this only when needed, not automatically
    // scrollToActiveItem();
  });
</script>
