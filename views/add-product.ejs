    </div>
    <div class="main-content-header-bottom">
      <h1 class="h3 mb-0 text-gray-800">Add Product</h4>
    </div>
  </div>
  <div class="user-content py-5">
    <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
      <div class="add-product">
        <div class="row">
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Product Name</label>
              <input type="text" class="form-control" name="product_name" placeholder="Product Name">
            </div>
          </div>
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Product Category</label>
              <select class="form-select" name="product_cat">
                <option disabled selected>Select Category</option>
                <% for(let i=0;i<product_cat.length;i++) { %>
                <option value="<%= product_cat[i].product_sub_cateogry_id %>">
                  <%= product_cat[i].product_sub_cateogry_name %>
                </option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="col-md-4">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Product Price</label>
              <input type="text" class="form-control" name="product_price" placeholder="Product Price">
            </div>
          </div>
          <div class="col-md-4">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Disount</label>
              <input type="text" class="form-control" name="product_discount" placeholder="Discount">
            </div>
          </div>
          <div class="col-md-4">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Quantity</label>
              <input type="number" class="form-control" name="product_qunatity" placeholder="Quantity">
            </div>
          </div>
          <div class="col-md-12">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Description</label>
              <textarea name="product_description" class="form-control" placeholder="Description"></textarea>
            </div>
          </div>
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Direct Order</label>
              <select class="form-select" name="direct_order">
                <option disabled selected>Select</option>
                <option value="0">No</option>
                <option value="1">Yes</option>
              </select>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="add-notification-form-item">
              <label for="" class="form-label">Featured Image</label>
              <div class="custom-file-upload mb-5">
                <img src="/images/800_300.png" class="mb-4" alt="" id="featured-image" width="100px" height="100px" />
                <div class="custom-file-upload-box">
                  <i class="bi bi-plus-circle"></i>
                  <h6>Click here to upload File</h6>
